<?xml version="1.0" encoding="utf-8"?><!-- res/layout/custom_notification_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="start|center_vertical"
            android:layout_toStartOf="@+id/button_extends"
            android:text="@string/notification_text"
            android:textSize="12.5sp"
            android:theme="@style/NotificationTextStyle" />

        <RelativeLayout
            android:id="@+id/button_extends"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ico_three_dots"
                android:theme="@style/NotificationImageStyle"/>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>