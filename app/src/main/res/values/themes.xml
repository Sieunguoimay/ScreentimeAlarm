<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScreenTimeAlarm" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/icon_color_brown</item>
        <item name="colorPrimaryVariant">@color/icon_color_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_color_brown</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.ScreenTimeAlarm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ScreenTimeAlarm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ScreenTimeAlarm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultNumberPickerTheme">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:background">@drawable/bg_round_corner_bordered_white</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_white</item>
    </style>
    <style name="NotificationButtonStyle">
        <item name="android:background">@drawable/bg_button_notification_white</item>
    </style>
    <style name="NotificationTextStyle">
        <item name="android:textColor">@color/text_notification_color_black</item>
    </style>
    <style name="NotificationImageStyle">
        <item name="android:tint">@color/button_notification_color_black</item>
    </style>
    <style name="ImageViewStyle">
        <item name="tint">@color/icon_color_brown</item>
    </style>
    <style name="NumberPicker" parent="DefaultNumberPickerTheme">
        <item name="android:textColorPrimary">@color/text_color_brown</item>
    </style>
    <style name="ProgressBar">
        <item name="android:progressTint">@color/progress</item>
        <item name="android:progressBackgroundTint">@color/button_color</item>
    </style>
</resources>